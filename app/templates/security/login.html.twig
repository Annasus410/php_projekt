{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Logowanie'|trans }}
{% endblock %}

{% block body %}

    <h1>
        {{ 'Zaloguj się!'|trans }}
    </h1>

    <form method="post" action="{{ url('security_login') }}">
        {% if error %}
            {%  include 'default/_single_flash_message.html.twig' with {
                type: 'danger',
                message: error.messageKey|trans(error.messageData, 'security')
            } %}
        {% endif %}

        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="logn">{{ 'Login'|trans }}</label>
            <div class="col-sm-10">
                <input type="text" id="login" name="login" value="{{ last_username }}" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="password">{{ 'Hasło'|trans }}</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="password" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group row float-sm-right">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="right">
            <input type="submit" value="{{ 'Zaloguj'|trans }}" class="btn btn-primary" />
            </div>
        </div>
    </form>

{% endblock %}