{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Dodaj nową opinie!'|trans }}
{% endblock %}

{% block body %}


    {{ form_start(form, { method: 'POST', action: url('opinion_new') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Dodaj opinie'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a class="btn btn-primary" href="{{ url('all_opinion') }}" role="button">
            {{ 'Powrót do listy'|trans }}
        </a>

    </div>
    {{ form_end(form) }}
{% endblock %}